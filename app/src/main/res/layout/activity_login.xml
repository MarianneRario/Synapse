<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:actionBarNavMode="tabs"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/dark_violet"
    tools:context=".screen.Login">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="117dp"
        android:contentDescription="@string/logo"
        android:layout_marginTop="90dp"
        android:src="@drawable/ic_splash_white_logo" />

    <com.google.android.material.card.MaterialCardView
        style="@style/CustomCardCorners"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="@string/hello_again"
                android:textColor="@color/dark_grey"
                android:textSize="30sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                app:boxStrokeColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:hintTextColor="@color/light_grey"
                app:endIconMode="clear_text">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/rounded_text_login"
                    android:hint="@string/login_email"
                    android:textSize="16sp"
                    android:textColor="@color/dark_grey"
                    android:fontFamily="@font/roboto_bold" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/white"
                android:layout_marginTop="20dp"
                app:hintTextColor="@color/light_grey"
                android:textColorHint="@color/dark_grey"
                app:endIconMode="password_toggle">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/rounded_text_login"
                    android:hint="@string/login_password"
                    android:textSize="16sp"
                    android:textColor="@color/dark_grey"
                    android:includeFontPadding="true"
                    android:fontFamily="@font/roboto_bold"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_button_login"
                android:text="@string/login" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgot_password"
                android:textAlignment="center"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="15dp"
                android:textSize="15sp"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
