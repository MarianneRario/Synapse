<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:actionBarNavMode="tabs"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/bg_light_grey"
    tools:context=".screen.Login">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:id="@+id/tvWelcomeToSynapse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/redhatdisplay_semibold"
                android:gravity="center"
                android:text="@string/tvWelcome"
                android:textColor="@color/dark_grey"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/redhatdisplay_regular"
                android:gravity="center"
                android:text="@string/tvGladToSeeYouBack"
                android:textColor="@color/light_grey"
                android:textSize="15sp" />

            <!-- EMAIL -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                app:hintEnabled="false"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textVisiblePassword"
                    android:background="@drawable/rounded_text_login"
                    android:fontFamily="@font/redhatdisplay_regular"
                    android:hint="@string/login_email"
                    app:boxStrokeWidthFocused="0dp"
                    android:padding="20dp"
                    android:textColorHint="@color/mid_grey"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- PASSWORD -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                app:endIconMode="password_toggle"
                app:hintEnabled="false"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etLoginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textVisiblePassword"
                    android:background="@drawable/rounded_text_login"
                    android:fontFamily="@font/redhatdisplay_regular"
                    android:hint="@string/login_password"
                    app:boxStrokeWidthFocused="0dp"
                    android:padding="20dp"
                    android:textColorHint="@color/mid_grey"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_button_login"
                android:fontFamily="@font/redhatdisplay_bold"
                android:text="@string/btnLogin"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/redhatdisplay_regular"
                android:text="@string/forgot_password"
                android:textAlignment="center"
                android:textColor="@color/dark_grey"
                android:textSize="15sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="25dp"
                android:background="@color/horizontal_line_grey"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <TextView
                android:id="@+id/tvSwitchToRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/redhatdisplay_regular"
                android:text="@string/tvDontHaveAccount"
                android:textColor="@color/light_grey"
                    android:layout_marginBottom="10dp"
                android:textSize="15sp" />

                <com.google.android.material.button.MaterialButton
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="10dp"
                app:strokeColor="@color/bt_stroke"
                app:strokeWidth="2dp"
                app:backgroundTint="@color/white"
                android:padding="15dp"
                android:textColor="@color/dark_grey"
                android:fontFamily="@font/redhatdisplay_bold"
                android:textAllCaps="false"
                android:text="@string/btnRegister"
                android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
